{
  "name": "esport-tournament-api",
  "version": "1.0.0",
  "description": "API REST pour la gestion de tournois E-sport",
  "main": "src/server.js",
  "type": "module",
  "author": "Elouan",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "gen:prisma": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "node --experimental-strip-types prisma/seed.ts",
    "css:build": "npx @tailwindcss/cli -i ./src/public/css/input.css -o ./src/public/css/style.css --minify",
    "dev": "npm run gen:prisma && npm run css:build && node --experimental-strip-types --watch src/server.js",
    "start": "npm run gen:prisma && npm run css:build && node --experimental-strip-types src/server.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md,ts}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.0.0",
    "@prisma/client": "^7.2.0",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^7.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{json,md,ts}": [
      "prettier --write"
    ]
  }
}